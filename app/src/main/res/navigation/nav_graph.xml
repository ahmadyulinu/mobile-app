<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/beranda">

    <fragment
        android:id="@+id/checkout"
        android:name="com.example.pam_uas.fragments.checkout"
        android:label="fragment_checkout"
        tools:layout="@layout/fragment_checkout" />
    <fragment
        android:id="@+id/beranda"
        android:name="com.example.pam_uas.fragments.beranda"
        android:label="fragment_beranda"
        tools:layout="@layout/fragment_beranda" >
        <action
            android:id="@+id/action_beranda_to_checkout"
            app:destination="@id/checkout"
            app:enterAnim="@anim/from_below"
            app:exitAnim="@anim/from_above"
            app:popEnterAnim="@anim/from_below"
            app:popExitAnim="@anim/from_above" />
    </fragment>
</navigation>